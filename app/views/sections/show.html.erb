<h1><%= @section.name %></h1>
<p><%= @section.prompt %></p>

<%= link_to "â† Back to Sections", root_path, class: "back-link" %>
<%= link_to "Fill Out Survey", survey_section_path(@section), class: "survey-link" %>
<%= link_to "View Responses", section_responses_path(@section), class: "responses-link" %>

<h2>Questions</h2>

<% if @section.questions.any? %>
  <div class="questions-list">
    <% @section.questions.each do |question| %>
      <div class="question-item">
        <%= link_to question.name, question_path(question) %>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No questions yet. Create your first question below.</p>
<% end %>

<h3>Add New Question</h3>

<%= form_with model: [@section, @question], local: true do |form| %>
  <div class="field">
    <%= form.label :name, "Question Name" %>
    <%= form.text_field :name, required: true %>
  </div>

  <div class="actions">
    <%= form.submit "Create Question" %>
  </div>
<% end %>