<div class="container">
  <nav class="main-nav">
    <%= link_to "Forms", forms_path %>
    <%= link_to "Sections", sections_path %>
    <%= link_to "Questions", questions_path %>
    <%= link_to "Answers", answers_path %>
    <%= link_to "Responses", responses_path %>
    <%= link_to "Metrics", metrics_path %>
    <%= link_to "Dashboards", dashboards_path %>
    <%= link_to "Logout", logout_path, data: { "turbo-method": :delete } %>
  </nav>

  <h1>Edit Response</h1>

  <%= link_to "â† Back to Response", @response, class: "back-link" %>

  <div class="card">
    <%= form_with model: @response, local: true do |form| %>
      <% if @response.errors.any? %>
        <div class="error-messages">
          <h4><%= pluralize(@response.errors.count, "error") %> prohibited this response from being saved:</h4>
          <ul>
            <% @response.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :form_id, "Form" %>
        <%= form.select :form_id, options_from_collection_for_select(@forms, :id, :name, @response.form_id), { prompt: 'Select form' }, { required: true } %>
      </div>

      <div class="field">
        <%= form.label :namespace, "Namespace (optional)" %>
        <%= form.text_field :namespace, placeholder: "e.g., my-items.category or work.projects" %>
        <small style="display: block; color: #666; margin-top: 0.25rem;">Use dots to create folder structure (e.g., my-items.category)</small>
      </div>

      <div class="actions">
        <%= form.submit "Update Response" %>
      </div>
    <% end %>

    <p><em>Note: To modify the answers in this response, you'll need to edit individual answers or retake the form survey.</em></p>
    
    <div style="margin-top: 1rem; text-align: center;">
      <%= link_to "Delete Response", soft_delete_response_path(@response), 
          data: { "turbo-method": :patch, confirm: "Are you sure you want to delete this response? This action cannot be undone." }, 
          class: "btn", 
          style: "background-color: var(--error); color: var(--white);" %>
    </div>
  </div>
</div>